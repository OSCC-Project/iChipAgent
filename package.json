{
  "name": "ichipagent",
  "displayName": "iChipAgent",
  "description": "The chip design agents built by iEDA team.",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/OSCC-Project/iChipAgent.git"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "welcome"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ichipagent",
          "title": "iChipAgent",
          "icon": "resources/iCA.svg"
        }
      ]
    },
    "views": {
      "ichipagent": [
        {
          "type": "webview",
          "id": "ichipagent.chatView",
          "name": "Chat",
          "icon": "resources/iEDA_24x24.svg"
        }
      ]
    }
  },
  "files": [
    "LICENSE",
    "README.md",
    "CHANGELOG.md",
    "src/extension.ts",
    "out",
    "resources",
    "images",
    "package.json",
    "package-lock.json",
    "tsconfig.json",
    "node_modules"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },

  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1"
  },

  "dependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "axios": "^1.4.0",
    "typescript": "^5.8.3"
  }
}
